                         ///...................BITMASK........///
///Description 2 no khata
#include<bits/stdc++.h>
using namespace std;
int res,ara[30];
int main()
{
    int n;
    cin>>n;
    for(int i=0; i<(1<<n); i++){
    for(int j=0; j<n; j++){
        if((i & 1<<j) != 0)
        {
            cout<<"i==== "<<i<<"   j======"<<j<<endl;
        }
        }
        cout<<">>>>>>>>>>>>>>>>>>>>>>>>>>>>>"<<endl;
       }
       }
/**
input:
3
output:
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
i==== 1   j======0
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
i==== 2   j======1
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
i==== 3   j======0
i==== 3   j======1
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
i==== 4   j======2
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
i==== 5   j======0
i==== 5   j======2
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
i==== 6   j======1
i==== 6   j======2
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
i==== 7   j======0
i==== 7   j======1
i==== 7   j======2
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
**/
